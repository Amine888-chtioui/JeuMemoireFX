<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.shape.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.GameController"
            style="-fx-background-color: linear-gradient(to bottom, #141E30, #243B55);">

    <!-- ================= BOUTON RETOUR ================= -->
 <Button fx:id="btnRetourHome" text="â¬… Retour"
        style="-fx-font-size: 14px; 
               -fx-background-color: transparent; 
               -fx-text-fill: white; 
               -fx-font-weight: bold; 
               -fx-padding: 10 15 10 15;" 
        onAction="#retourHome"
        AnchorPane.leftAnchor="0"
        prefWidth="100" prefHeight="40"/>

    <!-- ================= NIVEAU  ================= -->
    <HBox alignment="CENTER" spacing="5"
          AnchorPane.topAnchor="20" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
        <Label text="ðŸŽ® " style="-fx-font-size: 16px; -fx-text-fill: white; -fx-font-weight: bold;"/>
        <Label fx:id="labelLevel" text="1" style="-fx-font-size: 16px; -fx-text-fill: white; -fx-font-weight: bold;"/>
    </HBox>

    <!-- ================= BARRE DES SOUS-NIVEAUX ================= -->
    <StackPane AnchorPane.topAnchor="70" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" prefHeight="50">
        <Line startX="0" startY="20" endX="1200" endY="20" style="-fx-stroke: #888888; -fx-stroke-width: 3;" />
        <HBox fx:id="barreSousNiveaux" alignment="CENTER" spacing="0">
            <Circle fx:id="cercle1" radius="15" fill="#FFD700"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Circle fx:id="cercle2" radius="15" fill="#FFD700"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Circle fx:id="cercle3" radius="15" fill="#FFD700"/>
        </HBox>
    </StackPane>

    <!-- ================= SCORE ET CHRONO ================= -->
    <HBox spacing="50" alignment="CENTER" AnchorPane.topAnchor="130" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" prefHeight="40">
        <HBox spacing="5" alignment="CENTER">
            <Label text="" style="-fx-font-size: 18px;"/>
            <Label fx:id="labelScore" text="0 | Total : 0" style="-fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;"/>
        </HBox>

        <HBox spacing="5" alignment="CENTER">
            <Label text="" style="-fx-font-size: 18px;"/>
            <Label fx:id="labelChrono" text="0" style="-fx-text-fill: #FF6B6B; -fx-font-size: 16px; -fx-font-weight: bold;"/>
        </HBox>
    </HBox>

    <!-- ================= GRILLE DES CARTES ================= -->
    <StackPane AnchorPane.topAnchor="180" AnchorPane.bottomAnchor="20" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10">
        <GridPane fx:id="grille" hgap="15" vgap="15" style="-fx-alignment: center;"/>
    </StackPane>

    <!-- ================= MESSAGE FIN NIVEAU ================= -->
    <VBox fx:id="finBox" spacing="10" visible="false"
          style="-fx-background-color: #1e1e1e; -fx-padding: 20; -fx-border-radius: 10; -fx-background-radius: 10; -fx-border-color: #ffffff; -fx-border-width: 2;"
          AnchorPane.topAnchor="200" AnchorPane.leftAnchor="100" AnchorPane.rightAnchor="100">
        <Label fx:id="finMessage" text="Fin du niveau !" style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;" />
        <Button fx:id="btnRejouer" text="Rejouer ce niveau"
                style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10; -fx-padding: 15;"/>
    </VBox>

</AnchorPane>
