<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.media.MediaView?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.RegisterController"
            style="-fx-background-color: linear-gradient(to bottom, #141E30, #243B55);">

    <HBox AnchorPane.topAnchor="0"
          AnchorPane.bottomAnchor="0"
          AnchorPane.leftAnchor="0"
          AnchorPane.rightAnchor="0">

        <!-- =================  FORM de register ================= -->
        <VBox spacing="20"
              alignment="CENTER"
              prefWidth="420"
              style="-fx-background-color: rgba(255,255,255,0.08); -fx-padding: 40;">

            <Label text="ðŸŽ® Jeu de MÃ©moire"
                   style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: white;"/>

            <Label text="Inscription"
                   style="-fx-font-size: 20px; -fx-text-fill: white;"/>

            <VBox spacing="15" alignment="CENTER">

                <TextField fx:id="txtUsername" promptText="Username"
                           prefWidth="260"
                           style="-fx-background-color: rgba(255,255,255,0.2);
                                  -fx-text-fill: white;
                                  -fx-prompt-text-fill: #cccccc;
                                  -fx-background-radius: 8;"/>

                <PasswordField fx:id="txtPassword" promptText="Mot de passe"
                               prefWidth="260"
                               style="-fx-background-color: rgba(255,255,255,0.2);
                                      -fx-text-fill: white;
                                      -fx-prompt-text-fill: #cccccc;
                                      -fx-background-radius: 8;"/>

                <PasswordField fx:id="txtConfirmPassword" promptText="Confirmer mot de passe"
                               prefWidth="260"
                               style="-fx-background-color: rgba(255,255,255,0.2);
                                      -fx-text-fill: white;
                                      -fx-prompt-text-fill: #cccccc;
                                      -fx-background-radius: 8;"/>

                <Label fx:id="labelMessage"
                       style="-fx-text-fill: #FF6B6B; -fx-font-weight: bold;"/>
            </VBox>

            <HBox spacing="20" alignment="CENTER">
                <Button text="S'inscrire" onAction="#handleRegister"
                        style="-fx-background-color: #C07F00;
                               -fx-text-fill: white;
                               -fx-font-weight: bold;
                               -fx-background-radius: 10;
                               -fx-padding: 10 25;"/>

                <Button text="Retour" onAction="#goToLogin"
                        style="-fx-background-color: transparent;
                               -fx-border-color: #C07F00;
                               -fx-border-width: 2;
                               -fx-text-fill: #C07F00;
                               -fx-font-weight: bold;
                               -fx-background-radius: 10;
                               -fx-padding: 10 25;"/>
            </HBox>

        </VBox>

        <!-- =================  VIDEO ================= -->
        <StackPane fx:id="videoContainer"
                   style="-fx-background-color: black;"
                   HBox.hgrow="ALWAYS">

            <MediaView fx:id="mediaView"
                       preserveRatio="true"
                       fitWidth="800"
                       fitHeight="600"/>
        </StackPane>

    </HBox>

</AnchorPane>
